<!--                             <property name="code" value="$!signal == 'quit'"/> -->
<!--                         </bean> -->
<!--                     </property> -->
<!--                 </bean> -->
<!--             </list> -->
<!--         </property> -->

        <property name="entryActions">
            <list class="ActionList">
                <bean class="K202Action">
                    <property name="code" value="$view.create ()"/>
                </bean>
                <bean class="K202Action">
                    <property name="code" value="$mapper.m2v ($controller.onFormShow ())"/>
                </bean>
            </list>
        </property>
        
